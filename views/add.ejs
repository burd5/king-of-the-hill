<%- include ('partials/header') -%>

<div class="text-center text-5xl mb-5">
    <h3>Add a List Item</h3>
</div>

    <ul class="tabs flex flex-row border-primary border-2">
            <li class="tab text-3xl findMovieTab active"><a href="#findMovie">Find a Movie</a></li>
            <li class="tab text-3xl addMovieTab"><a href="#addMovie">Add a Movie</a></li>
            <li class="tab text-3xl addCafeTab"><a href="#addCafe">Add a Cafe</a></li>
            <li class="tab text-3xl addDinerTab"><a href="#addDiner">Add a Diner</a></li>
    </ul>


    <div id="addMovie" class="text-center">
        <h3 class="text-3xl my-5 text-primary">Movies</h3>
        <form action="/addMovieManual" method="POST" class="">

                <div class="flex flex-col">
                    <label for="title">Title</label>
                    <input class="w-1/3 inputTitle" type="text" id="title" name="title">
                </div>

                <div class="flex flex-col">
                    <label for="author">Year</label>
                    <input class="w-1/3" type="number" id="year" name="year">
                </div>
            
                <div class="flex flex-col">
                    <label for="rating">Rating</label>
                    <input class="w-1/3" type="number" id="rating" name="rating" step=".01" min="0" max="10" autocomplete="off">
                </div>
            

            <div class="row">
                <input id="save" type="submit" value="Submit" class="btn btn-ghost w-1/3 my-5"></input>
            </div>

        </form>
    </div>

    <div id="addCafe" class="text-center">
        <h3 class="text-3xl my-5 text-primary">Cafes</h3>
        <form action="/addCafe" method="POST" class="border-1">

                <div class="flex flex-col">
                    <label for="name">Name</label>
                    <input class="w-1/3" type="text" id="name" name="name">
                </div>

                <div class="flex flex-col">
                    <label for="address">Address</label>
                    <input class="w-1/3" type="text" id="address" name="address">
                </div>
            

            
                <div class="flex flex-col">
                    <label for="rating">Rating</label>
                    <input class="w-1/3" type="number" id="rating" name="rating" step=".01" min="0" max="10" autocomplete="off">
                </div>
            

            <div class="row">
                <input id="save" type="submit" value="Submit" class="btn btn-ghost my-5 w-1/3"></input>
            </div>

        </form>
    </div>

    <div id="addDiner" class="text-center">
        <h3 class="text-3xl my-5 text-primary">Diners</h3>
        <form action="/addDiner" method="POST" class="border-1">

                <div class="flex flex-col">
                    <label for="name">Name</label>
                    <input class="w-1/3" type="text" id="name" name="name">
                </div>

                <div class="flex flex-col">
                    <label for="address">Address</label>
                    <input class="w-1/3" type="text" id="address" name="address">
                </div>
            
            
                <div class="flex flex-col">
                    <label for="rating">Rating</label>
                    <input class="w-1/3" type="number" id="rating" name="rating" step=".01" min="0" max="10" autocomplete="off">
                </div>
            

            <div class="row">
                <input id="save" type="submit" value="Submit" class="btn btn-ghost my-5 w-1/3"></input>
            </div>

        </form>
    </div>

<div id="findMovie">
    <div id="searchBar" class="w-3/5 m-auto text-center text-3xl rounded-xl">  
        
        <h2 class="searchForMovie text-center text-primary my-5">Search for a Movie</h2>
        <p class="text-base text-xl">Refresh the queue before making a new search</p>
        <input type="text" placeholder="Title" name="movieTitle" class="input max-w-xs searchMovieInput my-5 movieValue text-2xl"/>
        <input type="number" placeholder="Year" class="input max-w-xs searchMovieInput yearValue text-2xl"/>
        <div class="searchButtons inline">
            <button class="btn btn-ghost text-lg my-5 mr-3 ml-3 findMovies">Search</button>
            <button class="btn btn-ghost text-lg mb-5 refresh fa fa-refresh"></button>
        </div>
        <span class="mx-2 my-2 text-lg text-center text-red-600 error">Error: Search is too vague. Please refresh the queue and try again.</span>
    </div>
    
    <div id="movieQuery" class="justify-around flex flex-wrap my-10 w-3/4 m-auto">
        
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    const myTabs = document.querySelectorAll('.tabs');
    M.Tabs.init(myTabs);
  });
</script>

<%- include ('partials/footer') -%>

